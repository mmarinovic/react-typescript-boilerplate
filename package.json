{
  "name": "react-typescript-starter",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "watch:dev": "better-npm-run watch:dev",
    "watch:prod": "better-npm-run watch:prod",
    "build:dev": "better-npm-run build:dev",
    "build:prod": "better-npm-run build:prod",
    "test": "better-npm-run test",
    "watch:test": "better-npm-run watch:test",
    "lint": "tslint --project tsconfig.json",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "bundle:analyze": "better-npm-run build:analyze && webpack-bundle-analyzer webpack/dist/stats.json"
  },
  "betterScripts": {
    "watch:dev": {
      "command": "\"node_modules/.bin/webpack-dev-server\" --watch --progress --colors --config \"webpack/dev.config.ts\"",
      "env": {
        "NODE_ENV": "development",
        "WATCH_MODE": true
      }
    },
    "watch:prod": {
      "command": "\"node_modules/.bin/webpack-dev-server\" --client-log-level info --watch --progress --colors --config webpack/prod.config.ts",
      "env": {
        "NODE_ENV": "production",
        "WATCH_MODE": true
      }
    },
    "build:dev": {
      "command": "\"node_modules/.bin/webpack\" --progress --colors --config \"webpack/dev.config.ts\"",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build:prod": {
      "command": "\"node_modules/.bin/webpack\" --progress --colors --config \"webpack/prod.config.ts\"",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build:analyze": {
      "command": "\"node_modules/.bin/webpack\" --progress --colors --config \"webpack/analyze.config.ts\"",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "\"node_modules/.bin/jest\"",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "watch:test": {
      "command": "\"node_modules/.bin/jest\" --watch",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "dependencies": {
    "@reach/router": "^1.3.3",
    "deep-extend": "^0.6.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.0",
    "styled-components": "^4.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/runtime": "^7.9.2",
    "@testing-library/react": "^10.0.1",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/circular-dependency-plugin": "^5.0.0",
    "@types/copy-webpack-plugin": "^5.0.0",
    "@types/deep-extend": "^0.4.31",
    "@types/html-webpack-plugin": "^3.2.2",
    "@types/jest": "^25.1.4",
    "@types/jest-in-case": "^1.0.1",
    "@types/reach__router": "^1.3.1",
    "@types/react": "^16.9.27",
    "@types/styled-components": "^5.0.1",
    "@types/webpack": "^4.41.8",
    "@types/webpack-bundle-analyzer": "^2.13.3",
    "@types/webpack-dev-server": "^3.10.1",
    "babel-jest": "^25.2.4",
    "babel-loader": "^8.1.0",
    "better-npm-run": "^0.1.1",
    "circular-dependency-plugin": "^5.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.0.3",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "jest-in-case": "^1.0.2",
    "node-sass": "^4.13.1",
    "path": "^0.12.7",
    "prettier": "^2.0.2",
    "pretty-quick": "^2.0.1",
    "react-hot-loader": "^4.12.20",
    "react-test-renderer": "^16.13.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "testing-library": "^0.0.2",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-no-circular-imports": "^0.7.0",
    "tslint-react": "^4.2.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^3.8.3",
    "url-loader": "^4.0.0",
    "webpack": "^4.42.0",
    "webpack-bundle-analyzer": "^3.6.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
